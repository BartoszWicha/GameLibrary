extends layout

block content
 link(rel='stylesheet', href='/stylesheets/Reviews.css')

 each review in Reviews
   .review
    h2.GameTitle #{review.Game}
    div.d-flex.flex-md-row.flex-lg-row.flex-sm-column
     p.p-2.col-6 #{review.Cost}
     p.p-2.col-6.d-flex.justify-content-md-end Score: #{review.Score}/100
    .genres.d-flex.col-lg-12.flex-sm-column.flex-md-row
     each genre in review.Genres
      span.badge.badge-warning.genreItem.col-md-2.col-sm-7.mx-md-2.mt-2.mx-sm-0= genre